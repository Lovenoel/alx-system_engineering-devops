#!/usr/bin/env bash
#Installs nginx and configures a new Ubuntu machine to listen at port 80

# Update package index
apt-get update

# Install nginx
if apt-get -y install nginx; then
    echo "Nginx installed successfully."
else
    echo "Failed to install Nginx. Exiting."
    exit 1
fi

# Configure nginx to listen on port 80
cat > /etc/nginx/sites-available/default <<EOF
server {
    listen 80 default_server;
    listen [::]:80 default_server;

    root /var/www/html;
    index index.html index.htm index.nginx-debian.html;

    server_name _;

    location / {
        try_files \$uri \$uri/ =404;
    }
}
EOF

# Restart nginx
service nginx restart

# Check if nginx restarted successfully
if service nginx status | grep -q "active (running)"; then
    echo "Nginx restarted successfully."
else
    echo "Failed to restart Nginx. Exiting."
    exit 1
fi

echo "Configuration completed successfully."
